<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_friend"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/deep_white"
        android:padding="12dp">

        <com.rfit.card.holder.digitalholder.view.RoundedImageView
            android:id="@+id/imgIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="1dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_option"
            android:layout_toRightOf="@+id/imgIcon"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/tabDark"
                android:textSize="18dp"
                android:typeface="sans"></TextView>

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:clickable="false"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/black_shade"
                android:textSize="14dp"></TextView>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#08088A"
                android:textSize="16dp"
                android:textStyle="bold|italic"
                android:typeface="serif"
                android:visibility="gone"></TextView>

            <TextView
                android:id="@+id/txtContact"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textColor="@color/lite_blue"
                android:textSize="16dp"
                android:textStyle="bold"
                android:typeface="serif"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtPos"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_option"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:background="@drawable/generic_button_selector"
            android:src="@drawable/ic_contact" />

    </RelativeLayout>
</android.support.v7.widget.CardView>